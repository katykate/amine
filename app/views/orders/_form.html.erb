<div class="container">

<%= form_for(order) do |f| %>
  <% if order.errors.any? %>
    <div id="notice_background">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= alert %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id %>
    <%= f.text_field :user_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :product_id %>
    <%= f.select :product_id, Product.pluck(:name, :id), {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :total %>
    <%= f.text_field :total, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
</div>