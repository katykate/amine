<div class="container">

  <div class="row" id="show">

<% cache @product do %>
    <div class="col-md-6 col-sm-12">
    <h3><%= @product.name %></h3>
   
      <center><%= image_tag(@product.image_url, width: "350", class: "img-zoom", data_zoom_image: @product.image_url) %></center>

      <p>
        <%= @product.description %>
      </p>

      <p>
        <strong>Color:</strong>
        <%= @product.colour %>
      </p>

      <p>
        <strong>Price: </strong>
        <%= @product.price %>
      </p>


      <%= form_with(url: '/payments/create') do |form| %>
      <%= render partial: "shared/stripe_checkout_button" %>
        <%= hidden_field_tag(:product_id, @product.id) %>
      <% end %>

      <hr style="width: 25%;">
      <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div></p>

      <hr style="width: 25%;">
      <p>Highest Rating: <div class="rated" data-score="<%= @product.highest_rating_comment.try(:rating) %>"></div></p><hr style="width: 25%;"><p>Lowest Rating: <div class="rated" data-score="<%= @product.lowest_rating_comment.try(:rating) %>"></div></p>

      <% if signed_in? && current_user.admin? %>
        <%= link_to 'Edit', edit_product_path, class: 'btn btn-success btn-lg' %>
      <% else %>
        <%= link_to 'Back', products_path, class: 'btn btn-success btn-lg' %>
      <% end %>

      </div>

      <div class="col-md-6 col-sm-12">

        <%= render 'new_comment' %>
        <%= render 'comments' %>

      </div>
<% end %>
  </div>
</div>  


         
